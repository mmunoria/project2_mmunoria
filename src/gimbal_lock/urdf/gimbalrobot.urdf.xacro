<?xml version="1.0"?>
<robot name="gimbalbot">

  <link name="base_link">
    <visual>
      <geometry><box size="0.25 0.25 0.05"/></geometry>
    </visual>
  </link>

  <link name="yaw_link">
    <visual>
      <geometry><cylinder radius="0.09" length="0.02"/></geometry>
    </visual>
  </link>

  <joint name="yaw_joint" type="revolute">
    <parent link="base_link"/>
    <child link="yaw_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.1416" upper="3.1416" effort="1" velocity="2"/>
  </joint>

  <link name="pitch_link">
    <visual>
      <geometry><box size="0.18 0.02 0.18"/></geometry>
    </visual>
  </link>

  <joint name="pitch_joint" type="revolute">
    <parent link="yaw_link"/>
    <child link="pitch_link"/>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="1.5708" effort="1" velocity="2"/>
  </joint>

  <link name="roll_link">
    <visual>
      <geometry><cylinder radius="0.05" length="0.20"/></geometry>
    </visual>
  </link>

  <joint name="roll_joint" type="revolute">
    <parent link="pitch_link"/>
    <child link="roll_link"/>
    <origin xyz="0 0 0.07" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-3.1416" upper="3.1416" effort="1" velocity="2"/>
  </joint>

</robot>
